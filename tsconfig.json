{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["esnext", "DOM"],
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "downlevelIteration": true,
    "types": ["jest", "node"],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "packages"]
}
